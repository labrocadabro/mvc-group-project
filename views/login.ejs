<%- include('partials/head.ejs', {title:"Sign Up"}) %>


<section class="vh-100 signup">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                            <form class="mx-1 mx-md-4" action="/login" method="POST">
                                <%- include('partials/forms/error.ejs') %>

                                <%- include('partials/forms/inputWithIcons.ejs', {name: 'email' , type: 'email' ,
                                label:"Email", faIcon: 'fas fa-envelope' , placeholder: 'Enter your email' ,
                                parentClass: 'mb-4' }) %>

                                <%- include('partials/forms/inputWithIcons.ejs', {name: 'password' , type: 'password' ,
                                label:"Password", faIcon: 'fas fa-lock' , placeholder: 'Enter your password' ,
                                parentClass: 'mb-4' }) %>

                                <div class="mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                                </div>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <a href="/signup" title="login">Register</a>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                 class="img-fluid" alt="Sample image" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('partials/footer.ejs', {script: '/js/login.js' }) %>
